<!DOCTYPE html>
<html lang="en">
{{> head}}

<body>
  {{> topbar}}
  {{> header}}
  <br><br><br><br>
  <div class="container">
    <div class="row profile">
      <div class="col-md-3">
        <div class="profile-sidebar">
          <div class="profile-usertitle">
            <div class="profile-usertitle-name">
              <br>
              <h3 id='fullName'></h3><br>
            </div>
            <div class="profile-usertitle-job">
              <h3 id="role"></h3><br><br><br>
            </div>
          </div>

          <div class="profile-userbuttons">
            <button type="button" class="btn btn-success btn-sm" onclick='window.location = "/logout"'>Logout</button>
            <br><br><br><br><br><br><br><br>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="profile-content">
          <ul class="nav nav-pills green" id="myTab">
            <li class="nav-item">
              <a href="#home" class="nav-link active" data-toggle="tab" href="#home" data-toggle="tab">Profile</a>
            </li>
          </ul>
          <br>
          <div class="tab-content">
            <div id="home" class="tab-pane fade in show active">
              <hr />
              <h5 class="mt-2"> Profile Settings - Change and Update your details here</h5>

              <form role="profileDetails">
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">First name</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="text" value="" id='fName'>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Last name</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="text" value="" id='lName'>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Email</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="email" value="" id='email'>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Phone Number:</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="text" value="" id='phoneNo'>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label"></label>
                  <div class="col-lg-9">
                    <input type="button" class="btn btn-success" value="Save Changes" id='updateUserInfo'>
                    <input type="reset" class="btn " value="Cancel">
                  </div>
                </div>
              </form>
              <hr />
              <form role="changePassword">
                <h5 class="mt-2"> Change your password</h5>
                <p>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Current Password</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="password" value="" id="currentPassword">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">New Password</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="password" value="" id="newPassword">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Repeat New Password</label>
                  <div class="col-lg-9">
                    <input class="form-control" type="password" value="" id="newPasswordConfirm">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label"></label>
                  <div class="col-lg-9">
                    <h5 id='passwordError'></h5>
                    <input type="button" class="btn-success btn" value="Change Password" id="changePassword">
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br><br><br>
  {{> footer}}
  {{> backtotop}}
</body>
<!-- Custom -->
<script src="static/profile-assets/js/profile.js"></script>
<link href="static/profile-assets/css/style.css" rel="stylesheet">

</html>